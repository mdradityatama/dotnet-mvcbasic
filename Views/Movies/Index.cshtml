@* @model IEnumerable<MvcMovie.Models.Movie> *@
@model MvcMovie.Models.MovieGenreViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Movie List</h1>

<p>
    <a asp-action="Create"></a><button type="button" class="btn btn-primary">Create New</button></a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="container">
        <div class="row float-right pb-2">
            <div class="col-sm form-inline">
                <select class="form-control mr-2" asp-for="MovieGenre" asp-items="Model.Genres">
                    <option value="">All</option>
                </select>
                <input class="form-control mr-1 mr-ms-2" type="text" asp-for="SearchString" placeholder="Search Title" />
                <input class="btn btn-outline-success my-2 my-sm-0" type="submit"  value="Filter" />
            </div>
        </div>

    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th><b>Actiom</b></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-warning">Edit</button></a> 
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-info">Details</button></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
